generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  username     String
  hashPassword String
  createdAt    DateTime @default(now())

  colections ConnectionUserCollection[]
}

model Word {
  id          Int                        @id @default(autoincrement())
  word        String
  translation String
  collections ConnectionCollectionWord[]
  connections ConnectionWordUser[]

  @@unique([word, translation])
}

model ConnectionWordUser {
  id         Int      @id @default(autoincrement())
  userId     Int
  wordId     Int
  word       Word     @relation(fields: [wordId], references: [id], onDelete: Cascade)
  stage      Int      @default(0)
  lastStudy  DateTime @default(now())
  nextReview DateTime

  @@unique([wordId, userId])
}

model Collection {
  id         Int                        @id @default(autoincrement())
  name       String
  authorName String
  words      ConnectionCollectionWord[]
  length     Int                        @default(0)
  users      ConnectionUserCollection[]
  public     Boolean                    @default(false)
}

model ConnectionCollectionWord {
  id           Int @id @default(autoincrement())
  collectionId Int
  wordId       Int

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  word       Word       @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@unique([collectionId, wordId])
}

model ConnectionUserCollection {
  id           Int        @id @default(autoincrement())
  userId       Int
  collectionId Int
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  progress     Int        @default(0)
  completed    Boolean    @default(false)
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@unique([userId, collectionId])
}
